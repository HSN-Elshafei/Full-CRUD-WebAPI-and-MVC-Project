@model MVCUsingAPI.Models.Project

@{
    ViewBag.Title = "Edit Project";
}

<h2 class="text-center p-3">Edit Project</h2>

<form asp-action="Edit" asp-controller="Project" method="post" class="p-4 bg-light rounded shadow-sm">
    <input type="hidden" asp-for="ProjId" />

    <div class="mb-3 form-group">
        <label asp-for="ProjName" class="form-label"><i class="fas fa-tasks"></i> Project Name</label>
        <input asp-for="ProjName" class="form-control" placeholder="Enter updated project name" />
        <span asp-validation-for="ProjName" class="text-danger"></span>
    </div>

    <div class="form-group text-center p-3">
        <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save"></i> Save Changes</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary px-4"><i class="fas fa-times"></i> Cancel</a>
    </div>
</form>
