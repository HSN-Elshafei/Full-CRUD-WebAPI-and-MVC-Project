@model MVCUsingAPI.Models.AddDepartment

@{
    ViewBag.Title = "Create Department";
}

<h2 class="text-center p-3">Create New Department</h2>

<form asp-action="Create" asp-controller="Home" method="post" class="p-4 bg-light rounded shadow-sm">
    <div class="mb-3 form-group">
        <label asp-for="DeptName" class="form-label"><i class="fas fa-building"></i> Department Name</label>
        <input asp-for="DeptName" class="form-control" placeholder="Enter department name" />
        <span asp-validation-for="DeptName" class="text-danger"></span>
    </div>

    <div class="form-group text-center p-3">
        <button type="submit" class="btn btn-success px-4"><i class="fas fa-plus-circle"></i> Create Department</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary px-4"><i class="fas fa-times"></i> Cancel</a>
    </div>
</form>
