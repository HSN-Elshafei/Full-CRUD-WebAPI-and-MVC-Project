@model MVCUsingAPI.Models.Department

@{
    ViewBag.Title = "Edit Department";
}

<h2 class="text-center p-3">Edit Department</h2>

<form asp-action="Edit" asp-controller="Home" method="post" class="p-4 bg-light rounded shadow-sm">
    <input type="hidden" asp-for="DeptId" />

    <div class="mb-3 form-group">
        <label asp-for="DeptName" class="form-label"><i class="fas fa-building"></i> Department Name</label>
        <input asp-for="DeptName" class="form-control" placeholder="Enter updated department name" />
        <span asp-validation-for="DeptName" class="text-danger"></span>
    </div>

    <div class="form-group text-center p-3">
        <button type="submit" class="btn btn-primary px-4"><i class="fas fa-save"></i> Save Changes</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary px-4"><i class="fas fa-times"></i> Cancel</a>
    </div>
</form>
